doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        title Nomad Zoom Clone
    body 
        main
            div#welcome
                form
                    input(type="text", placeholder="Enter Room", required)
                    button Enter
            div#call
                div#myStream
                    video(autoplay, playsinline, muted, width="400px", height="400px")
                    button#muteBtn Mute
                    button#cameraBtn Camera OFF
                    select#cameraSelect  
                div#peerStream
                    video(autoplay, playsinline, muted, width="400px", height="400px")
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js") 